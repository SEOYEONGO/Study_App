<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
         android:id="@+id/btn_move"                     // id는 btn_move
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="이동"/>

    <TextView
            android:id="@+id/textView1"                 // id는 textView1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안드로이드"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="70dp"/>

    <TextView
            android:id="@+id/textView2"                 // id는 textView1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱개발자"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="70dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요" />

    <EditText
            android:id="@+id/et_test"                 // id는 et_test
            android:layout_width="100dp"
            android:layout_height="wrap_content"  />
    <Button
            android:id="@+id/btn_test"                 // id는 btn_test
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">              // 가운데 정렬

        <ImageView
                android:id="@+id/test"                 // id는 test
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"/>     // mimap 폴더의 아이콘 하나를 띄워.


    </LinearLayout>

</LinearLayout>
