<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout                                                    // 여기 잘봐.
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/drawer_layout"                       // id는 drawer_layout  (이것 전체)
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btn_open"                  // id는 btn_open
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="열려라 참깨"/>

    </LinearLayout>
    <include layout="@layout/activity_drawer"/>               // 주목! 
                                                              // 우리는 layout의 activity_main.xml 파일 안에서 
                                                              // layout의 activity_drawer.xml 파일을 연결 시켜 줄거야.

</androidx.drawerlayout.widget.DrawerLayout>
